{
	"name": "arts-store",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint-fix": "next lint --fix",
		"check-format": "prettier --check .",
		"format": "prettier --write .",
		"test-all": "npm run check-format && npm run lint && npm run build",
		"prepare": "husky install",
		"precommit": "lint-staged"
	},
	"dependencies": {
		"firebase": "^9.8.1",
		"lint-staged": "^12.3.7",
		"next": "^12.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-fast-marquee": "^1.3.1",
		"react-icons": "^4.3.1"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.4",
		"eslint": "^8.11.0",
		"eslint-config-next": "12.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.0",
		"postcss": "^8.4.12",
		"prettier": "^2.6.1",
		"tailwindcss": "^3.0.23"
	},
	"lint-staged": {
		"*.{js,jsx,css,md}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
