{
	"name": "arts-store",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"lint:fix": "eslint --fix .",
		"format": "prettier --write \"**/*.+(js|jsx|json|css|md)\"",
		"prepare": "husky install",
		"precommit": "lint-staged"
	},
	"dependencies": {
		"next": "^12.1.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-fast-marquee": "^1.3.1",
		"react-icons": "^4.3.1"
	},
	"devDependencies": {
		"autoprefixer": "^10.4.4",
		"eslint": "8.11.0",
		"eslint-config-next": "12.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"postcss": "^8.4.12",
		"prettier": "^2.6.1",
		"tailwindcss": "^3.0.23"
	},
	"lint-staged": {
		"*.js": [
			"eslint --fix"
		],
		"*.{html,js}": [
			"prettier --write"
		]
	}
}
